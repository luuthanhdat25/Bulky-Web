@page
@model BulkyWebRazor.Pages.Categories.IndexModel

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/Categories/Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> New Category
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">

	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Order
			</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.CategoryList)
		{
			<tr>
				<th>
					@item.Name
				</th>
				<th>
					@item.DisplayOrder
				</th>
				<th>
					<div class="w-75 btn-group" role="group">
						<a asp-page="/Categories/Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-page="/Categories/Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
							<i class="bi bi-trash"></i> Delete
						</a>
					</div>
				</th>
			</tr>
		}
	</tbody>
</table>